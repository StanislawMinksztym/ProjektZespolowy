@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="~/Content/style.css" type="text/css" />
    <meta name="viewport" content="width=device-width" />
    <title>Ankiety | Lista ankiet</title>

</head>
<body>
    @if (HttpContext.Current.Session.Count == 0)
    {
        <header>
            <h1> Lista ankiet </h1>
            <div class="action_buttons">
                <a href="/Account/Login">
                    <div class="button">
                        Zaloguj
                    </div>
                </a>
            </div>
        </header>

        <div class="ankiety_lista">
            @foreach (var ankieta in @ViewBag.ListaAnkiet)
            {
                <div class="ankieta_rekord">
                    <div class="ankieta_nazwa">@ankieta.NazwaAnkiety</div>
                    <a href="/Ankiety/WypelnijAnkiete/@ankieta.IdAnkiety"> <div class="wypelnij_btn">Wypełnij</div></a>
                </div>
            }
        </div>
    }
    else
    {
        <header>
            <h1> Witaj @Session["UserName"].ToString(), oto lista dostępnych ankiet:</h1>
            <div class="action_buttons">
                <a href="#">
                    <div class="button">
                        Nowa ankieta

                    </div>
                </a>
                <a href="#">
                    <div class="button">
                        Nowe pytanie

                    </div>
                </a>
                <a href="/Account/LogOut">
                    <div class="button">
                        Wyloguj

                    </div>
                </a>
            </div>
        </header>

        <div class="ankiety_lista">
            <div class="ankiety_lista">
                @foreach (var ankieta in @ViewBag.ListaAnkiet)
                {
                    <div class="ankieta_rekord">
                        <div class="ankieta_nazwa">@ankieta.NazwaAnkiety</div>
                        <a href="/Ankiety/Wyniki/@ankieta.IdAnkiety"> <div class="wypelnij_btn">Wyniki</div></a>
                    </div>
                }
            </div>
        </div>
    }


</body>
</html>