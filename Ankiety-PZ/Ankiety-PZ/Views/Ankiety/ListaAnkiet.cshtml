@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="~/Content/style.css" type="text/css" />
    <meta name="viewport" content="width=device-width" />
    <title>Ankiety | Lista ankiet</title>

</head>
<body>
    @if (HttpContext.Current.Session.Count == 0)
    {
        <header>
            <h1> Lista ankiet </h1>
            <div class="action_buttons">
                <a href="/Account/Login">
                    <div class="button">
                        Zaloguj
                    </div>
                </a>
            </div>
        </header>

        <div class="ankiety_lista">
            @foreach (var ankieta in @ViewBag.ListaAnkiet)
            {
                <div class="ankieta_rekord">
                    <div class="ankieta_nazwa">@ankieta.NazwaAnkiety</div>
                    <a href="/Ankiety/Wypelnij/@ankieta.IdAnkiety"> <div class="wypelnij_btn">Wypełnij</div></a>
                </div>
            }
        </div>
    }else
    {
    <header>
        <h1> Witaj: @Session["UserName"].ToString() oto lista ankiet:</h1>
        <div class="action_buttons">
            <div class="button">
                <a href="#">Nowa ankieta</a>
            </div>
            <div class="button">
                <a href="#"> Nowe pytanie</a>
            </div>
            <div class="button">
                <a href="/Account/LogOut">Wyloguj</a>
            </div>
        </div>
    </header>

    <div class="ankiety_lista">
        <div class="ankiety_lista">
            @foreach (var ankieta in @ViewBag.ListaAnkiet)
            {
                <div class="ankieta_rekord">
                    <div class="ankieta_nazwa">@ankieta.NazwaAnkiety</div>
                    <a href="/Ankiety/Wyniki/@ankieta.IdAnkiety"> <div class="wypelnij_btn">Wyniki</div></a>
                </div>
            }
        </div>
    </div>
    }


</body>
</html>